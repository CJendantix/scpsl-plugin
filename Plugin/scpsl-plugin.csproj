<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net48</TargetFramework>
    <RootNamespace>cjsmodifiers</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
